<div class="page-header">
  <h1>
    Trainings
    <a href="/trainings/new" class="btn btn-lg btn-success">New Training</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @trainings.each do |training| %>
      <tr>
        <td><%= training.description %></td>
        <td><%= training.name %></td>
        <td>
          <a href="/trainings/<%= training.id %>" class="btn btn-primary">Show</a>
          <a href="/trainings/<%= training.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_training/<%= training.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
