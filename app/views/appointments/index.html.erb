<div class="page-header">
  <h1>
    Appointments
    <a href="/appointments/new" class="btn btn-lg btn-success">New Appointment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Appointment status</th>
        <th>Duration minutes</th>
        <th>Datetime</th>
        <th>User</th>
        <th>Therapist</th>
        <th>Actions</th>
      </tr>

      <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_status %></td>
        <td><%= appointment.duration_minutes %></td>
        <td><%= appointment.datetime %></td>
        <td><%= appointment.user_id %></td>
        <td><%= appointment.therapist_id %></td>
        <td>
          <a href="/appointments/<%= appointment.id %>" class="btn btn-primary">Show</a>
          <a href="/appointments/<%= appointment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_appointment/<%= appointment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
