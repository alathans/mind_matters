<div class="page-header">
  <h3>Appointment #<%= @appointment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Appointment status</dt>
      <dd><%= @appointment.appointment_status %></dd>

      <dt>Duration minutes</dt>
      <dd><%= @appointment.duration_minutes %></dd>

      <dt>Datetime</dt>
      <dd><%= @appointment.datetime %></dd>

      <dt>User</dt>
      <dd><%= @appointment.user_id %></dd>

      <dt>Therapist</dt>
      <dd><%= @appointment.therapist_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/appointments" class="btn btn-primary">
        Back
      </a>
      <a href="/appointments/<%= @appointment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_appointment/<%= @appointment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
