<div class="page-header">
  <h1>
    Credentials
    <a href="/credentials/new" class="btn btn-lg btn-success">New Credential</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @credentials.each do |credential| %>
      <tr>
        <td><%= credential.name %></td>
        <td>
          <a href="/credentials/<%= credential.id %>" class="btn btn-primary">Show</a>
          <a href="/credentials/<%= credential.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_credential/<%= credential.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
