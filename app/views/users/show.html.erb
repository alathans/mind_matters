<div class="page-header">
  <h3><%= current_user.first_name %>'s Profile</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>First name</dt>
      <dd><%= current_user.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= current_user.last_name %></dd>

      <dt>Username</dt>
      <dd><%= current_user.username %></dd>

      <dt>Email</dt>
      <dd><%= current_user.email %></dd>

      <dt>Address</dt>
      <dd><%= current_user.address %></dd>

      <dt>Branch</dt>
      <dd><%= current_user.branch %></dd>

      <dt>Occupational Specialty</dt>
      <dd><%= current_user.occupational_specialty %></dd>

      <dt>Last Rank</dt>
      <dd><%= current_user.last_rank %></dd>

      <dt>Years of Service</dt>
      <dd><%= current_user.years_of_service %></dd>

      <dt>Months Deployed</dt>
      <dd><%= current_user.months_deployed  %></dd>

      <dt>Location Deployed</dt>
      <dd><%= current_user.location_deployed  %></dd>


    </dl>

<div class="row how-to-heading text-center padding-inside-top-sm">
  <div class="col-xs-12">

    <div class="col-md-6">
      <div class="btn-group btn-group-justified">
        <a href="/therapists" class="btn btn-primary">
            Browse Therapists Now
        </a>
      </div>
    </div>

    <div class="col-md-6">
      <div class="btn-group btn-group-justified">
        <a href="/users/<%= current_user.id %>/edit" class="btn btn-warning">
          Edit Account Details
        </a>
      </div>
    </div>

  </div>
</div>
