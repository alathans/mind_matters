<div class="page-header">
  <h2>
    Browse Therapists
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">

      <% @therapists.each do |therapist| %>
      <tr>

        <td>
          <img src="/assets/<%= therapist.photo %>" height="100px" />
        </td>

        <td>
          <%= therapist.first_name %> <%= therapist.last_name %>
        </td>

        <td>
         <% therapist.credentials.each do |credential| %>
         <div><%= credential.name %></div>
         <% end %>
        </td>


<!-- NOT SHOWING CURRENTLY but keep in so can filter by state data if needed -->
        <td>
         <% therapist.states.each do |state| %>
         <div><% state.name %></div>
         <% end %>
        </td>

        <td>
          <a href="/therapists/<%= therapist.id %>" class="btn btn-primary">Show Details</a>
        </td>

        <td>
          <a href="/therapists/<%= therapist.id %>/edit" class="btn btn-warning">Edit Details</a>
        </td>
        <td>
        <!-- <a href="/delete_therapist/<%= therapist.id %>" class="btn btn-danger">
          Delete
        </a> -->
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div class="row footer padding-inside-top-md padding-inside-bottom-md">
<div class="col-md-12 text-center">
  <p>
    For more information, please contact us at <b>info@mind-matters.us</b>
  </p>
  </div>
</div>
