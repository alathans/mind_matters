<div class="page-header">
  <h1>
    Find a Therapist
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">

      <% @therapists.each do |therapist| %>
      <tr>
        <td><%= therapist.first_name %> <%= therapist.last_name %></td>
        <td><%= therapist.photo %></td>
        <td><%= therapist.bio %></td>
        <td><%= therapist.education %></td>
        <td><%= therapist.national_provider_identifier %></td>
        <td><%= therapist.address %></td>
        <td><%= therapist.email %></td>

        <td>
          <a href="/therapists/<%= therapist.id %>" class="btn btn-primary">Show Detail</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
