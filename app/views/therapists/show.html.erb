<div class="page-header">
  <h3><%= @therapist.first_name %> <%= @therapist.last_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <div class="col-md-4 text-center">

      <dd>
            <td><img src="/assets/<%= @therapist.photo %>" height="300px" /></td>
      </dd>

      <dd>Contact <%= @therapist.first_name %>:</dd>
      <dd> <a href="<%= @therapist.email %></dd>">    <%= @therapist.email %></dd></a>

    </div>

  <div class="col-md-8">
    <dl class="dl-right">

      <dt>Credentials:</dt>
      <dd>
        <% @therapist.credentials.each do |credential| %><div><%= credential.name %></div>
            <% end %>
      </dd>
<hr>
      <dt>Bio:</dt>
      <dd><%= @therapist.bio %></dd>
<hr>
      <dt>Education:</dt>
      <dd><%= @therapist.education %></dd>

    </dl>
  </div>
</div>
</div>

<hr>
<div class="row padding-inside-top-sm padding-inside-bottom-sm">

  <div class="col-xs-12">

    <div class="col-md-3 text-center">
      <h5>Licensed States</h5>
      <p>
        <% @therapist.states.each do |state| %>
        <div><%= state.name %></div>
        <% end %>
      </p>
      </div>

      <div class="col-md-6 text-center">
        <h5>Completed Trainings</h5>
        <p>
          <% @therapist.trainings.each do |training| %>
          <div><%= training.name %></div>
          <% end %>
        </p>
        </div>

        <div class="col-md-3 text-center">
          <h5>Accepted Insurance</h5>
          <p>
            <% @therapist.insurers.each do |insurance| %>
            <div><%= insurance.insurer_name %></div>
            <% end %>
          </p>
          </div>



  </div>
</div>


<!-- Buttons -->
    <div class="btn-group btn-group-justified">
      <a href="/therapists" class="btn btn-primary">
        Back
      </a>
      <a href="/therapists/<%= @therapist.id %>/message" class="btn btn-success">
        Send Message
      </a>

    </div>
  </div>
</div>


<hr>

<div class="row footer padding-inside-top-md padding-inside-bottom-md">
<div class="col-md-12 text-center">
  <p>
    For more information, please contact us at <b>info@mind-matters.us</b>
  </p>
  </div>
</div>
