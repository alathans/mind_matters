<div class="page-header">
  <h1>
    User notes
    <a href="/user_notes/new" class="btn btn-lg btn-success">New User note</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Body</th>
        <th>Appointment</th>
        <th>Actions</th>
      </tr>

      <% @user_notes.each do |user_note| %>
      <tr>
        <td><%= user_note.body %></td>
        <td><%= user_note.appointment_id %></td>
        <td>
          <a href="/user_notes/<%= user_note.id %>" class="btn btn-primary">Show</a>
          <a href="/user_notes/<%= user_note.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_note/<%= user_note.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
