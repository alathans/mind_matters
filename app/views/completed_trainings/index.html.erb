<div class="page-header">
  <h1>
    Completed trainings
    <a href="/completed_trainings/new" class="btn btn-lg btn-success">New Completed training</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date completed</th>
        <th>Training</th>
        <th>Therapist</th>
        <th>Actions</th>
      </tr>

      <% @completed_trainings.each do |completed_training| %>
      <tr>
        <td><%= completed_training.date_completed %></td>
        <td><%= completed_training.training_id %></td>
        <td><%= completed_training.therapist_id %></td>
        <td>
          <a href="/completed_trainings/<%= completed_training.id %>" class="btn btn-primary">Show</a>
          <a href="/completed_trainings/<%= completed_training.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_completed_training/<%= completed_training.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
