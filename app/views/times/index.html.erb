<div class="page-header">
  <h1>
    Times
    <a href="/times/new" class="btn btn-lg btn-success">New Time</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Time slot</th>
        <th>Actions</th>
      </tr>

      <% @times.each do |time| %>
      <tr>
        <td><%= time.time_slot %></td>
        <td>
          <a href="/times/<%= time.id %>" class="btn btn-primary">Show</a>
          <a href="/times/<%= time.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_time/<%= time.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
