<!-- Validation failure messages -->
<% if @user_insurance.errors.any? %>
  <% @user_insurance.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit User Insurance #<%= @user_insurance.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user_insurance/<%= @user_insurance.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for uninsured -->
      <div class="checkbox">
        <label for="uninsured">
          <input type="checkbox" id="uninsured" name="uninsured" value="1" <%= "checked" if @user_insurance.uninsured %>>
          Uninsured
        </label>
      </div>

      <!-- Label and input for insurer_id -->
      <div class="form-group">
        <label for="insurer_id" class="control-label">
          Insurer
        </label>

        <input type="text" id="insurer_id" name="insurer_id" placeholder="Insurer" class="form-control" value="<%= @user_insurance.insurer_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @user_insurance.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update User Insurance
      </button>
      or
      <a href="/user_insurances/<%= @user_insurance.id %>">Cancel</a>
    </form>
  </div>
</div>
