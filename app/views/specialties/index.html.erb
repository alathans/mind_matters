<div class="page-header">
  <h1>
    Specialties
    <a href="/specialties/new" class="btn btn-lg btn-success">New Specialty</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Specialty area</th>
        <th>Actions</th>
      </tr>

      <% @specialties.each do |specialty| %>
      <tr>
        <td><%= specialty.specialty_area %></td>
        <td>
          <a href="/specialties/<%= specialty.id %>" class="btn btn-primary">Show</a>
          <a href="/specialties/<%= specialty.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_specialty/<%= specialty.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
